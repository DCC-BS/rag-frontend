{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeAll",
    ":prImmediately"
  ],
  "packageRules": [
    {
      "description": "Automerge all patch updates",
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "prHourlyLimit": 0,
      "prConcurrentLimit": 0
    },
    {
      "description": "Automerge minor updates with high confidence",
      "matchUpdateTypes": [
        "minor"
      ],
      "matchConfidence": [
        "high",
        "very high"
      ],
      "automerge": true,
      "prHourlyLimit": 0,
      "prConcurrentLimit": 0
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
